{
  "name": "adls-sales-orders",
  "properties": {
    "structure": [
      {
        "name": "orderdate",
        "type": "Datetime"
      },
      {
        "name": "orderid",
        "type": "Int32"
      },
      {
        "name": "customerid",
        "type": "Int32"
      },
      {
        "name": "customername",
        "type": "String"
      },
      {
        "name": "total",
        "type": "Decimal"
      }
    ],
    "published": false,
    "type": "AzureDataLakeStore",
    "linkedServiceName": "adl-store",
    "typeProperties": {
      "fileName": "{Day}.txt",
      "folderPath": "sales/orders/{Year}/{Month}",
      "format": {
        "type": "TextFormat",
        "columnDelimiter": ","
      },
      "partitionedBy": [
        {
          "name": "Year",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "yyyy"
          }
        },
        {
          "name": "Month",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "MM"
          }
        },
        {
          "name": "Day",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "dd"
          }
        }
      ]
    },
    "availability": {
      "frequency": "Day",
      "interval": 1
    }
  }
}
